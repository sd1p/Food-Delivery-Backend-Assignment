generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id       Int       @id @default(autoincrement())
  name     String
  items    Item[]
  pricings Pricing[]
}

model Item {
  id             Int           @id @default(autoincrement())
  organizationId Int
  type           String
  description    String
  pricings       Pricing[]
  Organization   Organization? @relation(fields: [organizationId], references: [id])
}

model Pricing {
  id               Int          @id @default(autoincrement())
  organizationId   Int
  itemId           Int
  zone             String
  baseDistanceInKm Float
  kmPrice          Float
  fixPrice         Float
  Organization     Organization @relation(fields: [organizationId], references: [id])
  Item             Item         @relation(fields: [itemId], references: [id])
}
